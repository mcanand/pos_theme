<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_worker_profession_tree" model="ir.ui.view">
        <field name="name">worker.profession.tree</field>
        <field name="model">worker.profession</field>
        <field name="arch" type="xml">
            <tree string="Worker Profession">
                <field name="name"/>
                <field name="profession_category_id" string="Parent Category"/>
            </tree>
        </field>
    </record>
    <record id="view_worker_profession_form" model="ir.ui.view">
        <field name="name">worker.profession.form</field>
        <field name="model">worker.profession</field>
        <field name="arch" type="xml">
            <form string="Worker Profession">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="True"/>
                            <field name="profession_category_id" required="True" string="Parent Category"/>
                        </group>
                        <group>
                            <field name="image" class="oe_avatar" widget="image"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>
    <record id="action_worker_profession" model="ir.actions.act_window">
        <field name="name">Worker Profession</field>
        <field name="res_model">worker.profession</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a profession
            </p>
        </field>
    </record>
    <menuitem id="menu_worker_profession" name="Worker Profession"
              action="action_worker_profession"
              parent="contacts.res_partner_menu_config"
              sequence="2"/>
</odoo>