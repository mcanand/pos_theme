<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentButton" owl="1">
        <div class="control-button" t-on-click="trigger(props.actionToTrigger or 'click-pay')"
                 t-if="env.pos.config.themes == 'theme_new'">
                <div class="pay-circle" t-att-class="{ 'highlight': props.isActionButtonHighlighted }">
                    <span>
                        <i class="fa fa-chevron-right" role="img" aria-label="Pay" title="Pay"/>
                        Payment
                    </span>
                </div>
        </div>
    </t>
</templates>